<p id="notice"><%= notice %></p>

<h1>Fish Tweets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Content</th>
      <th>Like</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fish_tweets.each do |fish_tweet| %>
      <tr>
        <td><%= fish_tweet.user.name %></td>
        <td><%= fish_tweet.image %></td>
        <td><%= fish_tweet.content %></td>
        <td><%= fish_tweet.like %></td>
        <td><%= link_to 'Show', fish_tweet %></td>
        <% if user_signed_in? && fish_tweet.user_id == current_user.id %>

        
        <td><%= link_to 'Edit', edit_fish_tweet_path(fish_tweet) %></td>
        <td><%= button_to 'Destroy', fish_tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fish Tweet', new_fish_tweet_path %>
